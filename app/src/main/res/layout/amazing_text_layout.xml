<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



    <EditText
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:text="hello how are you"
        android:gravity="top|center_horizontal"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="100dp"/>

    <Button
        android:id="@+id/create_text_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:background="#EF1B1B"
        android:text="CREATE TEXT"
        android:textColor="#ffffff" />
    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/create_text_button"
        android:layout_alignStart="@+id/create_text_button">

        <EditText
            android:id="@+id/calc_txt_Prise"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:inputType="numberDecimal"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:textColor="@color/material_blue_grey_800"
            android:textStyle="bold"
            android:hint="calc_txt_Prise"
            android:singleLine="true" />

        <Button
            android:id="@+id/calc_clear_txt_Prise"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#FFFFFF" />

        <Button
            android:id="@+id/abc"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="200dp"
            android:background="#FFFFFF" />
    </FrameLayout>
    <!---->
    <!--<EditText-->
        <!--android:layout_width="100dp"-->
        <!--android:layout_height="100dp"-->
        <!--android:hint="fdsfdg g"-->
        <!--android:drawableBottom="@drawable/icon"/>-->

    <LinearLayout
        android:id="@+id/text_size_Bar_layout"
        android:layout_width="match_parent"
        android:layout_above="@+id/text_widget_button"
        android:layout_height="40dp"
        android:visibility="gone"
        android:orientation="horizontal">

        <SeekBar
            android:id="@+id/text_size_Bar"
            android:layout_width="match_parent"
            android:layout_weight="8"
            android:layout_height="40dp"
            />

        <Button
            android:id="@+id/button_ok_text_size"
            android:layout_width="40dp"
            android:layout_weight="1"
            android:text="ok"
            android:layout_height="40dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/text_toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:visibility="gone"
        android:layout_above="@+id/text_widget_button"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/new_text_button"
            android:layout_weight="1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/color_text_button"
            android:layout_weight="1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/size_text_button"
            android:layout_weight="1"/>

        <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/typeface_text_button"
        android:layout_weight="1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button_ok_text_widget"
            android:layout_weight="1"/>
        </LinearLayout>
    
    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/text_widget_button"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:text="text_widget"
        android:layout_height="40dp" />


</RelativeLayout>